                <tr>
                  <th scope="col">#</th>
                  <th scope="col">name</th>
                  <th scope="col">payment_method</th>
                  <th scope="col">user_id</th>
                  <th scope="col">category_name</th>
                  <th scope="col">amount_of_money</th>
                  <th scope="col">exchange_date</th>
                </tr>
              </thead>
              <tbody>
                {{#if exchangeTable}}
                {{#each exchangeTable}}
                <tr>
                  <th scope="row">{{sum @index 1}}</th>
                  <td>{{this.name}}</td>
                  <td>{{this.payment_method}}</td>
                  <td>{{this.user_id}}</td>
                  <td>{{this.category_name}}</td>
                  <td>{{this.amount_of_money}}</td>
                  <td>{{this.exchange_date}}</td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                  <td colspan="7">This table don't have any records ! </td>
                </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h4>INCOME</h4>
          <hr>
          <div class="income-table">
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">user_id</th>
                  <th scope="col">income_month</th>
                  <th scope="col">income_year</th>
                  <th scope="col">total_money_income</th>
                  <th scope="col">total_money_used</th>
                </tr>
              </thead>
              <tbody>
                {{#if incomeTable}}
                {{#each incomeTable}}
                <tr>
                  <th scope="row">{{sum @index 1}}</th>
                  <td>{{this.user_id}}</td>
                  <td>{{this.income_month}}</td>
                  <td>{{this.income_year}}</td>
                  <td>{{this.total_money_income}}</td>
                  <td>{{this.total_money_used}}</td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                  <td colspan="6">This table don't have any records ! </td>
                </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h4>USERS</h4>
          <hr>
          <div class="users-table">
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">userName</th>
                  <th scope="col">fullName</th>
                  <th scope="col">email</th>
                  <th scope="col">gender</th>
                  <th scope="col">profession</th>
                  <th scope="col">role</th>
                  <th scope="col">date_of_birth</th>
                </tr>
              </thead>
              <tbody>
                {{#if usersTable}}
                {{#each usersTable}}
                <tr>
                  <th scope="row">{{sum @index 1}}</th>
                  <td>{{this.userName}}</td>
                  <td>{{this.fullName}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.gender}}</td>
                  <td>{{this.profession}}</td>
                  <td>{{this.role}}</td>
                  <td>{{this.date_of_birth}}</td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                  <td colspan="8">This table don't have any records ! </td>
                </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>