<style>
  .search-container {
    position: absolute;
    top: -57px;
    left: 0;
    width: 100vw;
    height: 100vh;
  }

  .search-container {}

  .search-result {
    height: 100vh;
  }

  .search-transaction-form {
    background-color: #c9c9c9;
    margin: 75px auto;
    width: 95%;
    height: 83%;
    padding: 10px;
    border-radius: 16px;
  }

  .result {
    background-color: #c9c9c9;
    padding: 10px;
    border-radius: 16px;
    margin: 75px auto;
  }

  .result-container {
    background-color: #c9c9c9;
    margin: auto auto;
    width: 100%;
    height: 542px;
    padding: 10px;
    overflow-y: auto;
  }

  .search-result-header {
    margin-bottom: 40px;
    display: flex;
    justify-content: center;
  }

  .search-btn-component {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .search-transaction-btn {
    margin: 40px;
    background-color: black;
    border: none;
    width: 88px;
    height: 48px;
  }

  .search-transaction-btn:hover {
    background-color: white;
    color: black;
  }

  .result-container thead th {
    position: sticky;
    top: 0;
    z-index: 1;
  }
</style>

<div class="search-container row">
  <div class="search-menu col-3">
    <div class="search-transaction-form">
      <h1>Search menu</h1>
      <form action="/functions/search-for-transactions" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Transaction's name</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            name="transactionName">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Transaction's date</label>
          <input type="date" class="form-control" id="exampleInputPassword1" name="transactionDate" disabled>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Payment method</label>
          <select class="form-control" id="exampleFormControlSelect1" name="transactionPaymentMethod">
            <option name="all">all</option>
            <option name="Credit card">Credit card</option>
            <option name="Cash">Cash</option>
            <option name="Debit card">Debit card</option>
            <option name="e-Wallet">e-Wallet</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Transaction's category</label>
          <select class="form-control" id="exampleFormControlSelect2" name="transactionCategory">
            <option name="all">all</option>
            <option name="food">food</option>
            <option name="education">education</option>
            <option name="entertainment">entertainment</option>
            <option name="clothes">clothes</option>
            <option name="invest">invest</option>
            <option name="other">other</option>
          </select>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="timeTransaction" id="all-the-time" value="all-day" checked>
          <label class="form-check-label" for="exampleRadios1">
            all the time
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="timeTransaction" id="exampleRadios1" value="1-day">
          <label class="form-check-label" for="exampleRadios1">
            last 1 day
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="timeTransaction" id="exampleRadios2" value="7-day">
          <label class="form-check-label" for="exampleRadios1">
            Last 7 days
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="timeTransaction" id="exampleRadios3" value="30-day">
          <label class="form-check-label" for="exampleRadios2">
            Last 30 days
          </label>
        </div>
        <div class="search-btn-component">
          <button type="submit" class="btn btn-primary search-transaction-btn">Search</button>
        </div>
      </form>
    </div>
  </div>
  <div class="search-result col-9">
    <div class="result">
      <div class="search-result-header">
        <h1>Search result</h1>
      </div>
      <div class="result-container">
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Transaction's name</th>
              <th scope="col">payment method</th>
              <th scope="col">category</th>
              <th scope="col">amount of money</th>
              <th scope="col">date</th>
            </tr>
          </thead>
          <tbody>
            {{#if dataSearch}}
              {{#each dataSearch}}
              <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.payment_method}}</td>
                <td>{{this.category_name}}</td>
                <td>{{this.amount_of_money}}</td>
                <td>{{this.exchange_date}}</td>
              </tr>
              {{/each}}
            {{else}}
              <tr>
                <td colspan="6">You haven't search any thing </td>
              </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  const radioAllTime = document.getElementById('all-the-time');
  const radioTimeValid_1 = document.getElementById('exampleRadios1');
  const radioTimeValid_2 = document.getElementById('exampleRadios2');
  const radioTimeValid_3 = document.getElementById('exampleRadios3');
  const inputDate = document.getElementById('exampleInputPassword1');

  function handleRadioChange() {
    inputDate.disabled = !this.checked;
  }

  radioAllTime.addEventListener('change', function () {
    if (this.checked) {
      inputDate.disabled = true;
    } else {
      inputDate.disabled = false;
    }
  });
  radioTimeValid_1.addEventListener('change', handleRadioChange);
  radioTimeValid_2.addEventListener('change', handleRadioChange);
  radioTimeValid_3.addEventListener('change', handleRadioChange);
</script>